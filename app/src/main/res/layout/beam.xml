<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/beam_image"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/beam_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/large_marge"
        android:layout_below="@id/beam_image"
        android:layout_marginLeft="@dimen/super_large_marge"
        android:layout_marginRight="@dimen/super_large_marge"
        android:textSize="@dimen/super_large_text" />

</RelativeLayout>